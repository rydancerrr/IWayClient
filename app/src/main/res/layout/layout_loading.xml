<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:apps="http://schemas.android.com/tools"
    android:background="#00000000"
    android:layout_gravity="center"
    apps:context=".Activity.MainActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#00000000"
        >
    <androidx.cardview.widget.CardView
        android:id="@+id/imgCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:backgroundTint="@color/orange"
        card_view:cardCornerRadius="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/back_button"
             android:layout_below="@id/imageView"
                android:layout_width="35dp"
                android:elevation="10dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="10dp"
                android:layout_height="35dp"
               android:layout_centerHorizontal="true"
                android:background="@drawable/backbutton_b"
                />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"

            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageView"
            android:layout_alignParentEnd="true"
           android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/profile"/>
            <TextView
                android:id="@+id/name1"
                android:layout_below="@id/profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reporter's Name:"
                android:textColor="@color/white"
                android:textSize="15sp"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/name1"
            android:text="Reporter's Name:"
            android:textColor="@color/black"
            android:textSize="17sp"/>
            <TextView
                android:id="@+id/time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time:"

                android:layout_below="@id/name"
                android:textColor="@color/white"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/time1"
                android:textColor="@color/white"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/location1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location:"

                android:layout_below="@id/time"
                android:textColor="@color/white"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/location1"
                android:textColor="@color/white"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/status1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status:"
                android:layout_below="@id/location"
                android:textColor="@color/white"
                android:textSize="15sp"/>
<!--            <com.google.android.material.switchmaterial.SwitchMaterial-->
<!--                android:id="@+id/status"-->
<!--                android:layout_below="@+id/status1"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:textColor="@android:color/white"-->
<!--                android:textSize="15sp"-->
<!--                android:layout_centerHorizontal="true"-->
<!--                android:layout_marginBottom="5dp"-->
<!--                android:theme="@style/SCBSwitch"-->
<!--                -->
<!--           />-->

            <com.github.angads25.toggle.widget.LabeledSwitch
                android:id="@+id/status"
                android:layout_below="@+id/status1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_centerHorizontal="true"
                card_view:textOn= "solved"
                card_view:textOff= "pending"
                card_view:colorOn="@color/teal_200"
                card_view:colorBorder="@color/white"
              />



        </RelativeLayout>


        </RelativeLayout>
     </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>
